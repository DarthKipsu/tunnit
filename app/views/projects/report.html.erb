<h1><%= @project.name %> report</h1>
<p><strong>Team: </strong><%= @project.team.name %></p>
<p><strong>Time: </strong><%= @start.strftime("%d.%m.%Y") %> - <%= @end.strftime("%d.%m.%Y") %></p>
<p><strong>Total hours: </strong><%= sprintf "%.1f", @hours[:total] %> h</p>
<table>
    <tr>
        <td><h3>Hours used by team member:</h3></td>
    </tr>
    <% @hours[:users].each do |user| %>
     <tr>
        <td></td>
        <td><%= user[0] %> &nbsp; &nbsp; </td>
        <td><%= sprintf "%.1f", user[1] %> hours</td>
     </tr>
    <% end %>
</table>
