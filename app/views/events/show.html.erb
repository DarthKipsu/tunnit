<div class="col-md-5">
<h3><%= @event.project.name %> event</h3>
<p>
    <strong>Date:</strong>
    <%= @event.start.strftime("%A %d.%m.%Y") %>
</p>
<p>
    <strong>Time:</strong>
    <%= @event.start.strftime("%H:%M") %> - <%= @event.end.strftime("%H:%M") %>
    (<%= sprintf "%.1f", @event.duration %> h)
</p>
<p>
    <strong>Belongs to:</strong>
    <%= link_to @event.project.name, @event.project %>
    (<%= link_to @event.project.team.name, @event.project.team %>)
</p>
</div>
<div class="col-md-7">
    <br>
<%= link_to 'Edit event', edit_event_path(@event), class: 'btn btn-default' %>
<%= link_to 'Delete event', event_path(@event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</div>
