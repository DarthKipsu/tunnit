<div class="col-md-12">
<div class="col-md-6">
    <h3>Teams and projects</h3>
</div>
<div class="col-md-6">
    <br>
    <%= link_to 'Create new Team', new_team_path, class: 'btn btn-default' %>
    <%= link_to 'Create new Project', new_project_path, class: 'btn btn-default' %>
</div>
</div>

<div class="col-md-12">
    <% @teams.each do |team| %>
        <div class="col-md-5 well">
            <p><strong><%= link_to "Team: #{team.name}", team %></strong></p>
            <ul>
                <% team.projects.each do |project| %>
                    <li><%= link_to project.name, project %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
</div>
